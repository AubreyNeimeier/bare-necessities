<div class="show_content week_ahead">
<h1> The Week Ahead </h1>
<ul>
<% @events.uniq.each do |e| %>
    <li><%= e.date %> - <%= link_to e.title, event_path(e) %> </li>
        <ul>
            <% e.tasks.each do |t| %>
                <li><%= t.description %></li>
                <% end %>
        </ul>
    <% end %>
</ul> 
</div>
