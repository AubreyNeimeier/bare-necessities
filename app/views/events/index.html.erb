<%= link_to "Home", user_path(@user) %>


<h1> The Week Ahead </h1>
<div class="week_ahead">
<ul>
<% @events.uniq.each do |e| %>
    <li><%= e.date_object.dayname %> - <%= link_to e.title, event_path(e) %> </li>
        <ul>
            <% e.tasks.each do |t| %>
                <li><%= t.description %></li>
            <% end %>
        </ul>
    <% end %>
</ul>
</div>
